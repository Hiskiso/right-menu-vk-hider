{
    "manifest_version": 3,
    "name": "Hidde right menu",
    "description": "Скрывает правое меню в сообщениях

GitHub: https://github.com/Hiskiso/right-menu-vk-hider/

",
    "version": "1.0",
    "icons": {
    "128": "128.png"
    },
    "permissions": [
    "unlimitedStorage",
    "notifications",
    "storage", 
    "activeTab", 
    "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://vk.com/*"],
        "js": ["contentScript.js"]
      }
    ]
    }
